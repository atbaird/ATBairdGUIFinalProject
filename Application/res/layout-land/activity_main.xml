<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:orientation="vertical">
		<LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		    <ImageView 
		        android:layout_width="60dp"
		        android:layout_height="wrap_content"
		        android:id="@+id/leftOverDeck"
		        android:src="@drawable/card_back"
		        android:contentDescription="@string/lefDeck"/>
		    <ImageView
		        android:layout_width="60dp"
		        android:layout_height="wrap_content"
		        android:id="@+id/showOverDeck"
		        android:src="@drawable/no_card"
		        android:layout_marginRight="5dp"
		        android:layout_marginLeft="2dp"
		        android:contentDescription="@string/lefDeckup"/>
		    <ImageView
		        android:layout_width="60dp"
		        android:layout_height="wrap_content"
		        android:id="@+id/stackSpades"
		        android:src="@drawable/no_card_spade"
		        android:layout_marginLeft="100dp"
		        android:contentDescription="@string/spadeDes"/>
		    <ImageView
		        android:layout_width="60dp"
		        android:layout_height="wrap_content"
		        android:id="@+id/stackClubs"
		        android:src="@drawable/no_card_club"
		        android:layout_marginLeft="5dp"
		        android:contentDescription="@string/clubDes"/>
		    <ImageView
		        android:layout_width="60dp"
		        android:layout_height="wrap_content"
		        android:id="@+id/stackDiamonds"
		        android:src="@drawable/no_card_diamond"
		        android:layout_marginLeft="5dp"
		        android:contentDescription="@string/diamondDes"/>
		    <ImageView
		        android:layout_width="60dp"
		        android:layout_height="wrap_content"
		        android:id="@+id/stackHearts"
		        android:src="@drawable/no_card_heart"
		        android:layout_marginLeft="5dp"
		        android:contentDescription="@string/heartDes"/>
		</LinearLayout>
		<LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="85dp">
		    <ImageView
		        android:layout_width="60dp"
		        android:layout_height="wrap_content"
		        android:id="@+id/stackOne"
		        android:src="@drawable/no_card"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="5dp"
		        android:contentDescription="@string/stackOneDes"/>
		     <ImageView
		        android:layout_width="60dp"
		        android:layout_height="wrap_content"
		        android:id="@+id/stackTwo"
		        android:src="@drawable/no_card"
		        android:layout_marginRight="5dp"
		        android:contentDescription="@string/stackTwoDes"/>
		      <ImageView
		        android:layout_width="60dp"
		        android:layout_height="wrap_content"
		        android:id="@+id/stackThree"
		        android:src="@drawable/no_card"
		        android:layout_marginRight="5dp"
		        android:contentDescription="@string/stackThreeDes"/>
		       <ImageView
		        android:layout_width="60dp"
		        android:layout_height="wrap_content"
		        android:id="@+id/stackFour"
		        android:src="@drawable/no_card"
		        android:layout_marginRight="5dp"
		        android:contentDescription="@string/stackFourDes"/>
		        <ImageView
		        android:layout_width="60dp"
		        android:layout_height="wrap_content"
		        android:id="@+id/stackFive"
		        android:src="@drawable/no_card"
		        android:layout_marginRight="5dp"
		        android:contentDescription="@string/stackFiveDes"/>
		         <ImageView
		        android:layout_width="60dp"
		        android:layout_height="wrap_content"
		        android:id="@+id/stackSix"
		        android:src="@drawable/no_card"
		        android:layout_marginRight="5dp"
		        android:contentDescription="@string/stackSixDes"/>
		          <ImageView
		        android:layout_width="60dp"
		        android:layout_height="wrap_content"
		        android:id="@+id/stackSeven"
		        android:src="@drawable/no_card"
		        android:contentDescription="@string/stackSevenDes"/>
		</LinearLayout>
		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="30dp"
		    android:orientation="horizontal"
		    android:layout_marginTop="190dp">
		    <Button
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:id="@+id/new_game"
		        android:text="@string/new_game"
		        android:textSize="@dimen/font_size"/>
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:id="@+id/score"
		        android:text="@string/score"
		        android:layout_marginLeft="215dp"/>
		</RelativeLayout>
    <ImageView 
        android:id="@+id/cardImageHold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
